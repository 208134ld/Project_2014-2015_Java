<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root prefHeight="594.0" prefWidth="735.0" type="Accordion" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <panes>
    <TitledPane fx:id="tpKlas" animated="false" text="Klas">
         <content>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Graad: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="dbKlasGraad" prefWidth="150.0" />
                  <Label text="Leerjaar: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="dbKlasLeerjaar" prefWidth="150.0" />
                  <Label text="Klas: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtKlasName" />
                  <GridPane>
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Button fx:id="btnKlasToevoegen" mnemonicParsing="false" onAction="#addKlas" text="Toevoegen" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
                        <Button fx:id="btnKlasVerwijderen" mnemonicParsing="false" onAction="#removeKlas" text="Verwijderen" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
                     </children>
                  </GridPane>
               </children>
            </VBox>
         </content>
    </TitledPane>
    <TitledPane fx:id="tpLeerling" animated="false" text="Leerling">
         <content>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Graad">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="dbLeerlingGraad" prefWidth="150.0" />
                  <Label text="Leerjaar">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </Label>
                  <ComboBox fx:id="dbLeerlingLeerjaar" prefWidth="150.0" />
                  <Label text="Klas">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </Label>
                  <ComboBox fx:id="dbLeerlingKlas" prefWidth="150.0" />
                  <Label text="Naam">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="txtNaam" VBox.vgrow="ALWAYS" />
                  <Label text="Voornaam">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="txtVoornaam" />
                  <GridPane>
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Button fx:id="btnLeerlingToevoegen" mnemonicParsing="false" onAction="#addLeerling" text="Toevoegen" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
                        <Button fx:id="btnLeerlingVerwijderen" mnemonicParsing="false" onAction="#removeLeerling" text="Verwijderen" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </GridPane>
               </children>
            </VBox>
         </content>
    </TitledPane>
  </panes>
</fx:root>
