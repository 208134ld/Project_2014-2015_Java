        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="btnAddContinent" mnemonicParsing="false" onAction="#addContinent" text="Voeg werelddeel toe" />
            <Button fx:id="btnRemoveContinent" mnemonicParsing="false" onAction="#removeContinent" text="Verwijder werelddeel" GridPane.columnIndex="1" />
